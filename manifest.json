{
  "manifest_version": 3,
  "name": "Better-Falix",
  "version": "1.5.1",
  "description": "A browser extension that enhances the Falixnodes client experience by adding custom features and improvements.",
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "better-falix@thetwixhunter.dev",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    },
    "gecko_android": {
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://client.falixnodes.net/*",
    "https://falixnodes.net/*",
    "https://kb.falixnodes.net/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },


  "content_scripts": [ 
    {
      "matches": ["https://client.falixnodes.net/*"],
      "js": ["navbar-editor/apply-navbar.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://client.falixnodes.net/"],
      "js": ["features/general/custom-server-order/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/*"],
      "js": ["features/general/navbarhover/index.js"],
      "run_at": "document_idle"
    }, 
    {
      "matches": ["https://falixnodes.net/*"],
      "js": ["features/general/remove-exit-discount/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/"],
      "js": ["features/general/Remove-server-search/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/*"],
      "js": ["features/general/remove-navbar-footer-buttons/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/*", "https://falixnodes.net/*", "https://kb.falixnodes.net/*"],
      "js": ["features/general/replace-falix-logo/index.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://client.falixnodes.net/*"],
      "js": ["features/general/24h-time-format/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/*"],
      "js": ["features/general/Replace-account-category/index.js"],
      "run_at": "document_idle"
    },




    {
      "matches": ["https://client.falixnodes.net/server/console*", "https://client.falixnodes.net/server/*/console*"],
      "js": ["features/console/hide-console-tabs/index.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://client.falixnodes.net/server/console*", "https://client.falixnodes.net/server/*/console*"],
      "js": ["features/console/replace-support-modal/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/server/console*", "https://client.falixnodes.net/server/*/console*"],
      "js": ["features/console/replace-connect-tab/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/server/console*", "https://client.falixnodes.net/server/*/console*"],
      "js": ["features/console/replace-location-with-node/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/server/console*", "https://client.falixnodes.net/server/*/console*"],
      "js": ["features/console/remove-max-players/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/server/console*", "https://client.falixnodes.net/server/*/console*"],
      "js": ["features/console/remove-player-management/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/server/console*", "https://client.falixnodes.net/server/*/console*"],
      "js": ["features/console/remove-premium-transfer/index.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://client.falixnodes.net/server/console*", "https://client.falixnodes.net/server/*/console*"],
      "js": ["features/console/remove-cpu-card/index.js"],
      "run_at": "document_idle"
    },




    {
      "matches": ["https://client.falixnodes.net/server/filemanager*", "https://client.falixnodes.net/server/*/filemanager*"],
      "js": ["features/filemanager/remove-sftp-upload/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/server/filemanager*", "https://client.falixnodes.net/server/*/filemanager*"],
      "js": ["features/filemanager/upload-create-hover/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/server/edit*", "https://client.falixnodes.net/server/*/edit*"],
      "js": ["features/filemanager/better-editor-fullscreen/index.js"],
      "run_at": "document_idle"
    },




    {
      "matches": ["https://client.falixnodes.net/server/*"],
      "js": ["features/navigation/rename-config-to-properties/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/server/*"],
      "js": ["features/navigation/rename-addons-to-mods/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/server/*"],
      "js": ["features/navigation/split-addons-tabs/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/*"],
      "js": ["features/navigation/hide-support-category/index.js"],
      "run_at": "document_idle"
    },




    {
      "matches": ["https://client.falixnodes.net/shared-logs/*"],
      "js": ["features/logsharing/remove-logs-container/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/shared-logs/*"],
      "js": ["features/logsharing/redacted-content-subtle/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/shared-logs/*"],
      "js": ["features/logsharing/colored-log-messages/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/shared-logs/*"],
      "js": ["features/logsharing/auto-collapse-log-analysis/index.js"],
      "run_at": "document_idle"
    },




    {
      "matches": ["https://client.falixnodes.net/support/viewticket.php*"],
      "js": ["features/support-center/hide-write-a-reply-header/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/support/viewticket.php*"],
      "js": ["features/support-center/i-know-markdown/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/support/viewticket.php*"],
      "js": ["features/support-center/hide-template-button/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/support/viewticket.php*"],
      "js": ["features/support-center/remove-file-upload-label/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/support/viewticket.php*"],
      "js": ["features/support-center/show-ticket-id/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/support/viewticket.php*"],
      "js": ["features/support-center/inline-server-info/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/support/viewticket.php*"],
      "js": ["features/support-center/hide-participants/index.js"],
      "run_at": "document_idle"
    },




    {
      "matches": ["https://client.falixnodes.net/*"],
      "js": ["themes/light-mode/index.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://client.falixnodes.net/*"],
      "js": ["themes/purple-mode/index.js"],
      "run_at": "document_idle"
    }
  ]
}


